<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/rezept_detail_titel"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FFD54F"
        android:text="@string/rezeptInitial"
        android:textAlignment="center"
        android:textSize="25sp"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rezept_detail_titel"
        app:layout_constraintBottom_toTopOf="@id/edit_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".rezeptDetail.RezeptDetailFragment">

            <TextView
                android:id="@+id/rezept_detail_zutaten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:padding="16dp"
                android:text="@string/zutatenInitial"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View style="@style/Divider" />

            <TextView
                android:id="@+id/rezept_detail_beschreibung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:padding="16dp"
                android:text="@string/beschreibungInitial"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:text="@string/editbutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:text="@string/deletebutton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>