<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".rezeptDetail.RezeptDetailFragment">

        <TextView
            android:id="@+id/rezept_detail_titel"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="@string/rezeptInitial"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="#FFD54F"/>

        <TextView
            android:id="@+id/rezept_detail_zutaten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/zutatenInitial"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="5sp"/>

        <View style="@style/Divider"/>

        <TextView
            android:id="@+id/rezept_detail_beschreibung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:padding="16dp"
            android:text="@string/beschreibungInitial"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="10sp"/>

    </LinearLayout>
</ScrollView>